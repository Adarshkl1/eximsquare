<div class="col-md-6 col-md-offset-3">
</br>
</br>
</br>
<h2 class="text-center sign-head"><b>Forgot your password?</b></h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:maxlength=>"80",class: "form-control"  %>
  </div>
</br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions",class: "btn-success btn btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>